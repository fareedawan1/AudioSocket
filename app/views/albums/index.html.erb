  <% @albums.each do |album| %>
    <%= album.name %>
    <div>
      <%= link_to 'edit', edit_album_path(album), class: "btn btn-secondary" %>
      <%= link_to 'delete', album_path(album), method: :delete, class: "btn btn-secondary" %>
      <%= link_to 'show', album_path(album), class: "btn btn-secondary" %>
    </div>
  <% end %>
  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <%= link_to 'create album', new_album_path , class: "btn btn-secondary"%>
  </div>
